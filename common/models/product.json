    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "category": {
      "type": "string",
      "required": true
    },
    "quantity": {
      "type": "number",
      "default": 1
    }
  },
  "validations": [],
  "relations": {
    "orders": {
      "type": "hasMany",
      "model": "Order",
      "foreignKey": "productId"
    }
  },
  "acls": [],
  "methods": {}
}
